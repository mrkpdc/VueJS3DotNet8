{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\Logs.txt",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Server=localhost;Port=5432;Database=AuthDB;UserId=postgres;Password=postgres;",
          "tableName": "Logs",
          "needAutoCreateTable": true
        }
      }
      //{
      //  "Name": "MSSqlServer",
      //  "Args": {
      //    "connectionString": "Server=localhost;Database=AuthDB;User id=sa;Password=admin;TrustServerCertificate=True",
      //    "tableName": "Logs",
      //    "AutoCreateSqlTable": true
      //  }
      //}
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Serilog.WebApplication"
    }
  },
  "ConnectionStrings": {
    "DbContext_SQLServer": "Server=localhost;Database=AuthDB;User id=sa;Password=admin;TrustServerCertificate=True",
    "DbContext_Postgres": "Server=localhost;Port=5432;Database=AuthDB;UserId=postgres;Password=postgres;",
    "AuthDB_SQLServer": "Server=localhost;Database=AuthDB;User id=sa;Password=admin;TrustServerCertificate=True",
    "AuthDB_Postgres": "Server=localhost;Port=5432;Database=AuthDB;UserId=postgres;Password=postgres;"
  },
  "AuthSettings": {
    "LDAP": {
      "DomainName": "intsol",
      "DomainHost": "192.168.1.200",
      "DomainPort": 389,
      "ConnectionTimeout": 15000, //0 for platform TCP default
      "UseSSL": false,
      "CheckOnAD": false
    },
    "JWT": {
      "Issuer": "localhost",
      "Audience": "localhost",
      "Expiry": "1", //in minutes
      "RefreshTokenExpiry": "2", //in minutes
      "EncryptionKey": "keykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykeykey",
      "SigningKey": "signingkeysigningkeysigningkeysigningkeysigningkeysigningkeysigningkeysigningkey"
    }
  },
  "Cypher": {
    "Key": "" //spostata in AESEncryptionHelper
  }
}
